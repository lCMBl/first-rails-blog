<% if @post.errors.any? %>
    <div id="error_explanation">
      <h4>
        <%= pluralize(@post.errors.count, "error") %> prohibited
        this post from being saved:
      </h4>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>


<%= form_for @post do |f| %>
  <p>
    <%= f.label :title%>
    <br>
    <%= f.text_field :title%>
  </p>

  <p>
    <%= f.label :body%>
    <br>
    <%= f.text_area :body, size: "50x20"%>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>